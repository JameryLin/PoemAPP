<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/bt_yw_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        app:round_as_circle="true">

        <Button
            android:id="@+id/bt_yw"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_poemdetail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="译文"
            android:textSize="20sp"/>

    </com.gcssloop.widget.RCRelativeLayout>

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/bt_zs_all"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/bt_yw_all"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        app:round_as_circle="true">

        <Button
            android:id="@+id/bt_zs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_poemdetail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注释"
            android:textSize="20sp"/>

    </com.gcssloop.widget.RCRelativeLayout>

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/bt_bj_all"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/bt_zs_all"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        app:round_as_circle="true">

        <Button
            android:id="@+id/bt_bj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_poemdetail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="背景"
            android:textSize="20sp"/>

    </com.gcssloop.widget.RCRelativeLayout>

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/bt_sx_all"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bt_yw_all"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        app:round_as_circle="true">

        <Button
            android:id="@+id/bt_sx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_poemdetail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="赏析"
            android:textSize="20sp"/>

    </com.gcssloop.widget.RCRelativeLayout>

    <com.gcssloop.widget.RCRelativeLayout
        android:id="@+id/bt_ts_all"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bt_sx_all"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        app:round_as_circle="true">

        <Button
            android:id="@+id/bt_ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_poemdetail" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="听诗"
            android:textSize="20sp"/>

    </com.gcssloop.widget.RCRelativeLayout>


</RelativeLayout>